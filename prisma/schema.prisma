generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  price       Float
  description String?
}

enum Role {
  USER
  ADMIN
}
